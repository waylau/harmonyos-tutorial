<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:button_add"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#F76543"
        ohos:layout_alignment="horizontal_center"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="Add"
        ohos:text_size="30fp"
        />

    <Button
        ohos:id="$+id:button_remove"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#F76543"
        ohos:layout_alignment="horizontal_center"
        ohos:margin="10vp"
        ohos:padding="10vp"
        ohos:text="Remove"
        ohos:text_size="30fp"
        />

</DirectionalLayout>